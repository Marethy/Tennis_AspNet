@model Tennis.Models.Order
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Chỉnh sửa đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>Chỉnh sửa đơn hàng</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-controller="AdmHome">Trang chủ</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Index">Quản lý đơn hàng</a>
            </li>
            <li class="breadcrumb-item active">Chỉnh sửa</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Hidden field để giữ lại OrderId -->
                <input type="hidden" asp-for="OrderId" />

                <div class="card">
                    <div class="card-body">

                        <!-- Dropdown để chọn CustomerId -->
                        <div class="form-group">
                            <label asp-for="CustomerId" class="control-label"></label>
                            <select asp-for="CustomerId"
                                    asp-items="@(ViewData["CustomerId"] as SelectList)"
                                    class="form-control">
                                <option value="">-- Chọn khách hàng --</option>
                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>

                        <!-- Ngày đặt hàng -->
                        <div class="form-group">
                            <label asp-for="DayOrder" class="control-label"></label>
                            <input asp-for="DayOrder" type="date" class="form-control" />
                            <span asp-validation-for="DayOrder" class="text-danger"></span>
                        </div>

                        <!-- Ngày vận chuyển -->
                        <div class="form-group">
                            <label asp-for="DayDelivery" class="control-label"></label>
                            <input asp-for="DayDelivery" type="date" class="form-control" />
                            <span asp-validation-for="DayDelivery" class="text-danger"></span>
                        </div>

                        <!-- Checkbox Đã trả tiền -->
                        <div class="form-group form-check">
                            <input asp-for="PaidState" class="form-check-input" type="checkbox" />
                            <label asp-for="PaidState" class="form-check-label"></label>
                            <span asp-validation-for="PaidState" class="text-danger"></span>
                        </div>

                        <!-- Checkbox Trạng thái đơn hàng -->
                        <div class="form-group form-check">
                            <input asp-for="DeliveryState" class="form-check-input" type="checkbox" />
                            <label asp-for="DeliveryState" class="form-check-label"></label>
                            <span asp-validation-for="DeliveryState" class="text-danger"></span>
                        </div>

                        <!-- Tổng tiền -->
                        <div class="form-group">
                            <label asp-for="TotalMoney" class="control-label"></label>
                            <input asp-for="TotalMoney" class="form-control" />
                            <span asp-validation-for="TotalMoney" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-dark rounded-pill">
        <i class="bi bi-caret-left"></i> Trở về
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
