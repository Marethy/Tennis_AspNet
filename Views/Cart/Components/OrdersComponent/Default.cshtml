@using System.Globalization
@{
	var cul = CultureInfo.GetCultureInfo("vi-VN");
}
<div class="col-lg-7">
	<div class="card">
		<div class="card-body">
			<h5 class="card-title">Your order</h5>
			<!-- Table with hoverable rows -->
			<table class="table table-hover">
				<thead>
				<tr>
					<th scope="col">No.</th>
					<th scope="col">Placed on</th>
					<th scope="col">Delivered on</th>
					<th scope="col">Paid on</th>
					<th scope="col">Completed on</th>
					<th scope="col">Total</th>
					<th scope="col"></th>
				</tr>
				</thead>
				<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<th scope="row">@item.OrderId</th>
						<td>@item.DayOrder.ToShortDateString()</td>
						<td>@item.DayDelivery.ToShortDateString()</td>
						<td>
							<input type="checkbox" checked="@item.PaidState"/>
						</td>
						<td>
							<input type="checkbox" checked="@item.DeliveryState"/>
						</td>
						<td>@item.TotalMoney.ToString("#,###", cul.NumberFormat) Đ</td>
						<td>
							<a class="btn btn-info rounded-pill" asp-action="OderDetail" asp-controller="Cart" asp-route-id="@item.OrderId">Xem thêm</a>
						</td>
					</tr>
				}

				</tbody>
			</table>
			<!-- End Table with hoverable rows -->

		</div>
	</div>
	<!-- Table with stripped rows -->

</div>