@using System.Globalization
@{
	ViewData["Title"] = "OrderDetail";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
	var cul = CultureInfo.GetCultureInfo("vi-VN");
}
<div class="container">
	<div class="row justify-content-center text-center">
		<div class="col-xl-7 col-lg-9">
			<img src="~/Content/img/track_order.svg" alt="" class="img-fluid add_bottom_15" width="200" height="177">
			<p>Check your order status</p>
		</div>

		<div class="col-lg-7" id="Order-tabld-detail">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Your Order Details</h5>

					<!-- Table with hoverable rows -->
					<table class="table table-striped" id="Order-tabld-detail">
						<thead>
							<tr>
								<th scope="col">Product Name</th>
								<th scope="col">Product Image</th>
								<th scope="col">Unit Price</th>
								<th scope="col">Quantity</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<th scope="row">@item.Product.ProductName</th>
									<th scope="row">
										<img src="~/Content/img/products/@item.Product.ProductImage" width="150">
									</th>
									<td>@item.UnitPrice</td>
									<td>@item.Quantity</td>
								</tr>
							}
						</tbody>
					</table>
					<!-- End Table with hoverable rows -->
				</div>
			</div>
		</div>
	</div>
	<!-- /row -->
</div>
<!-- /container -->
