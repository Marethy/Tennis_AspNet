@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
	<!-- Register Page -->
	<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

					<div class="d-flex justify-content-center py-4">
						<a asp-action="Index" asp-controller="Home" class="logo d-flex align-items-center w-auto">
							<img src="~/Content/img/logo_black.png" alt="">
							<span class="d-none d-lg-block">Tennis Pro Store</span>
						</a>
					</div>

					<div class="card mb-3">
						<div class="form_container">
							<div class="card-body">
								<div class="pt-4 pb-2">
									<h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
									<p class="text-center small">Enter your details below to create your account</p>
								</div>
								<form asp-action="Register" method="post" class="row g-3 needs-validation">
									<!-- Username -->
									<div class="form-group">
										<input asp-for="UserName" type="text" class="form-control" placeholder="Username*">
									</div>
									<!-- Password and Confirm -->
									<div class="row no-gutters col-11">
										<div class="col-6 pr-1">
											<input asp-for="Password" type="password" class="hideShowPassword-wrapper" placeholder="Password*">
										</div>
										<div class="col-6 pl-1">
											<input asp-for="ConfirmPassword" type="password" class="hideShowPassword-wrapper" placeholder="Confirm Password*">
										</div>
									</div>
									<!-- Full Name -->
									<div class="form-group">
										<input asp-for="FullName" type="text" class="form-control" placeholder="Full Name*">
									</div>
									<!-- Email -->
									<div class="form-group">
										<input asp-for="Email" type="email" class="form-control" placeholder="Email*">
									</div>
									<!-- Address -->
									<div class="form-group">
										<input asp-for="Address" type="text" class="form-control" placeholder="Address*">
									</div>
									<hr>
									<!-- Terms -->
									<div class="form-group">
										<label class="container_check">
											I agree to the <a href="#0">Terms & Policy</a>
											<input class="form-check-input" name="terms" type="checkbox" id="term" required>
											<span class="checkmark"></span>
										</label>
									</div>
									<!-- Submit -->
									<div class="text-center">
										<input type="submit" id="registersubmit" value="Register" class="btn btn-primary w-100" disabled>
									</div>
								</form>
								<div class="col-12">
									<p class="small mb-0">Already have an account? <a asp-action="Login">Login</a></p>
									<a asp-action="ForgotPassword">Forgot password</a>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</section>
</div>

